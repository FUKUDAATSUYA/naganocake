<%= form_for @customer,:url => {controller: "admin/customers", action: "update"} do |f| %>
    <table class="table">
        <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
        </tr>
        <tr>
            <th class="line">氏名</th>
            <td>
                <%= f.text_field :first_name %>
            </td>
            <td>
                <%= f.text_field :last_name %>
            </td>
        </tr>
        <tr>
            <th>フリガナ</th>
            <td>
                <%= f.text_field :kana_first_name %>
            </td>
            <td>
                <%= f.text_field :kana_last_name %>
            </td>
        </tr>
        <tr>
            <th>郵便番号</th>
            <td><%= f.number_field :postcode %></td>
        </tr>
        <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
        </tr>
        <tr>
            <th>電話番号</th>
            <td><%= f.phone_field :phone_number %></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email %><td>
        </tr>
        <tr>
            <th>会員ステータス</th>
            <td>
                <%= f.radio_button :is_valid, :true %>
                <%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>
                <%= f.radio_button :is_valid, :false %>
                <%= f.label :is_valid, "退会済み", {value: :false, style: "display: inline-block;"} %>
            </td>
        </tr>
    </table>
        <%= f.submit "登録内容を保存する", class: "btn btn-info" %>
<% end %>