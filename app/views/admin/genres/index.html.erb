<%= form_for(@genre, url: admin_genres_path) do |f| %>

  <%= f.label :ジャンル %>　<%= f.text_field :name %><br>
  <%= f.radio_button :is_valid, :true %>
  <%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %><br>
  <%= f.radio_button :is_valid, :false %>
  <%= f.label :is_valid, "無効", {value: :false, style: "display: inline-block;"} %><br>
  <%= f.submit "送信" %>
<% end %>

<% @genres.each do |g| %>
	<%= g.name %>
	<%= g.is_valid%>
<% end %>