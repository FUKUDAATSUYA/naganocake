<div class="container">
<h2 style="margin-bottom: 40px; font-weight: bold">ジャンル一覧・追加</h2>
<h3>
<%= form_for(@genre, url: admin_genres_path) do |f| %>

	<%= f.label :ジャンル %>　<%= f.text_field :name %>
	<%= f.radio_button :is_valid, :true %>
	<%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>
	<%= f.radio_button :is_valid, :false %>
	<%= f.label :is_valid, "無効", {value: :false, style: "display: inline-block;"} %>
	<%= f.submit "追加する" , class: 'btn btn-info'%>
<% end %>
</h3>

<table class="table" style="margin-top: 40px">
<tr class="active">
	<th>ジャンル</th>
	<th>状態</th>
	<th></th>
</tr>
	<% @genres.each do |g| %>
		<tr>
		<td><%= g.name %></td>
		<td>
			<% if g.is_valid == true%>
				<p>有効</p>
			<% else %>
				<p>無効</p>
			<% end %>
		</td>
		<td><%= link_to '編集する', edit_admin_genre_path(g), class: 'btn btn-primary' %></td>
		</tr>
	<% end %>
</table>
</div>