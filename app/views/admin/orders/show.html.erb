<h1>注文履歴詳細</h1>
<h3>購入者 <%=link_to @order.customer.name, admin_customer_path(@order.customer) %></h3>
<h3>配送先 <%= @order.postcode + @order.address %></h3>
<h3>支払方法 <%= @order.payment_method %></h3>
<h3>注文ステータス </h3>
	<%= form_with model:@order, url: admin_order_path(@order) do |f|%>
		<%= f.select :order_status ,Order.order_statuses.keys.to_a, {},{include_blank: @order.order_status}  %>
		<%= f.submit '更新',class: 'btn btn-primary' %>
	<% end %>

<table class="table">
	<th>商品名</th>
	<th>単価（税込）</th>
	<th>数量</th>
	<th>小計</th>
	<th>製作ステータス</th>
	<% @order_items.each do |order_item| %>
		<tr>
			<td><%= order_item.item.name %></td>
			<td><%= (order_item.item.price * 1.1).floor %></td>
			<td><%= order_item.count %></td>
			<td><%= (order_item.item.price * 1.1).floor * order_item.count %></td>
			<td>
				<%= form_with model:order_item, url: admin_order_item_path(order_item) do |f|%>
					<%= f.select :create_status ,OrderItem.create_statuses.keys.to_a, {},{include_blank: order_item.create_status}  %>
					<%= f.submit '更新',class: 'btn btn-primary' %>
				<% end %>
			</td>
		</tr>
	<% end %>
</table>

<h3>商品合計</h3><%= @order.payment - @order.postage %>円
<h3>送料</h3><%= @order.postage %>円
<h3>請求合計金額</h3><%= @order.payment %>円
