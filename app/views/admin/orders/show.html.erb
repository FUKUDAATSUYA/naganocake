<div class="container">
		<div class="col-lg-offset-1">
			<h3 class="pull-left">注文履歴詳細</h1>
		</div>
		<div class="col-lg-12">
			<h4 class="pull-left">購入者 <%=link_to @order.customer.name, admin_customer_path(@order.customer) %></h3>
		</div>
		<div class="col-lg-12">
			<h4 class="pull-left">配送先 <%= @order.postcode + @order.address %></h3>
		</div>
		<div class="col-lg-12">
			<h4 class="pull-left">支払方法 <%= @order.payment_method %></h3>
		</div>
		<div class="col-lg-2">
			<h4 class="pull-left">注文ステータス </h3>
		</div>
		<div class="col-lg-3" style="margin-bottom: 40px;">
			<%= form_with model:@order, url: admin_order_path(@order) do |f|%>
				<%= f.select :order_status ,Order.order_statuses.keys.to_a, {},{include_blank: @order.order_status}  %>
				<%= f.submit '更新',class: 'btn btn-primary' %>
			<% end %>
		</div>
	<div class="col-lg-8">
	<table class="table">
	<tr class="active">
		<th>商品名</th>
		<th>単価（税込）</th>
		<th>数量</th>
		<th>小計</th>
		<th>製作ステータス</th>
	</tr>
		<% @order_items.each do |order_item| %>
			<tr>
				<td><%= order_item.item.name %></td>
				<td><%= include_tax(order_item.item.price) %></td>
				<td><%= order_item.count %></td>
				<td><%= include_tax(order_item.item.price) * order_item.count %></td>
				<td>
					<%= form_with model:order_item, url: admin_order_item_path(order_item) do |f|%>
						<%= f.select :create_status ,OrderItem.create_statuses.keys.to_a, {},{include_blank: order_item.create_status}  %>
						<%= f.submit '更新',class: 'btn btn-primary' %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</table>
	</div>
<div class="col-lg-4"><h4 class="pull-left"><strong>商品合計</strong>  <%= @order.payment - @order.postage %>円</h4></div>
<div class="col-lg-4"><h4 class="pull-left"><strong>送料</strong>  <%= @order.postage %>円</h4></div>
<div class="col-lg-4"><h4 class="pull-left"><strong>請求合計金額  <%= @order.payment %>円</strong></h4></div>
</div>
</div>