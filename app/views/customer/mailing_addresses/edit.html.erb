
<%= form_with model: @mailing_address do |f| %>
	<%= f.label :郵便番号 %>
	<%= f.text_field :postcode, value: @mailing_address.postcode %><br>
	<%= f.label :住所 %>
	<%= f.text_field :address, value: @mailing_address.address %><br>
	<%= f.label :宛名 %>
	<%= f.text_field :name, value: @mailing_address.name %>
	<%= f.hidden_field :customer_id, value: current_customer.id %>
	<%= f.submit "編集する", class: "btn btn-primary"%>
<% end %>
