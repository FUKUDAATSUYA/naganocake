<h1>配送先登録 / 一覧</h1>

<%= form_with model: MailingAddress.new do |f| %>
	<%= f.label :郵便番号 %>
	<%= f.text_field :postcode %><br>
	<%= f.label :住所 %>
	<%= f.text_field :address %><br>
	<%= f.label :宛名 %>
	<%= f.text_field :name %>
	<%= f.hidden_field :customer_id, value: current_customer.id %>
	<%= f.submit "登録する", class: "btn btn-primary"%>
<% end %>

<table class="table">
	<td>郵便番号</td>
	<td>住所</td>
	<td>宛名</td>
	<td></td>
<% @mailing_addresses.each do |m|%>
<tr>
	<th><%= m.postcode%></th>
	<th><%= m.address %></th>
	<th><%= m.name %></th>
	<th>
		<%= link_to '編集する',  edit_mailing_address_path(m) ,class: "btn btn-primary"%>
		<%= link_to '削除する',  mailing_address_path(m) , method: :delete ,class: "btn btn-danger"%>
	</th>
</tr>
<% end %>
</table>