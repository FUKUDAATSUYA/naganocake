<h1>配送先登録 / 一覧</h1>

<%= form_with model: MailingAddress.new do |f| %>
	<%= f.label :郵便番号 %>
	<%= f.text_field :postcode %><br>
	<%= f.label :住所 %>
	<%= f.text_field :address %><br>
	<%= f.label :宛名 %>
	<%= f.text_field :name %>
	<%= f.hidden_field :customer_id, value: current_customer.id %>
	<%= f.submit "登録する", class: "btn btn-primary"%>
<% end %>

<table class="table">
	<th>郵便番号</th>
	<th>住所</th>
	<th>宛名</th>
	<th></th>
<% @mailing_addresses.each do |m|%>
<tr>
	<td><%= m.postcode%></td>
	<td><%= m.address %></td>
	<td><%= m.name %></td>
	<td>
		<%= link_to '編集する',  edit_mailing_address_path(m) ,class: "btn btn-primary"%>
		<%= link_to '削除する',  mailing_address_path(m) , method: :delete ,class: "btn btn-danger"%>
	</td>
</tr>
<% end %>
</table>