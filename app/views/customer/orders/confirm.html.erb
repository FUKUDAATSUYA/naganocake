<h1>注文情報確認</h1>
<table class="table">
	<td>商品名</td>
	<td>単価(税込)</td>
	<td>数量</td>
	<td>小計</td>
	<td></td>
<% sum = 0 %>
<% @cart_items.each do |cart| %>
<tr>
	<th><%= cart.item.name %></th>
	<th><%= (cart.item.price * 1.1).floor %></th>
	<th><%= cart.count %></th>
	<th><%= (cart.item.price * 1.1).floor * cart.count %></th>
	<th><%= link_to '削除する', destroy_cart_item_path(cart), method: :delete, class: 'btn btn-danger' %></th>
	<% @price = (cart.item.price * 1.1).floor * cart.count %>
	<% sum += @price %>
</tr>
<% end %>
</table>
<table class="table">
<tr><td>合計金額</td><th><%= sum %></th></tr>
<tr><td>送料</td><th><%= @postage %></th></tr>
<% @payment = sum + @postage %>
<tr><td>請求金額</td><th><%= @payment %></th></tr>
</table>

<h2>支払方法</h2>
<!-- ここに値の受け渡しを入れたい -->
<h2>お届け先</h2>
<!-- ここに値の受け渡しを入れたい -->
<%= form_with model: @order, url:  orders_confirm_path do |f|%>
	<%= f.hidden_field :postage , value: @postage %>
	<%= f.hidden_field :payment , value: @payment %>
	<%= f.hidden_field :postcode , value: '123456' %>
	<%= f.hidden_field :address , value: '住所' %>
	<%= f.hidden_field :payment_method , value: :クレジットカード %>
	<%= f.submit '購入を確定する', class: 'btn btn-success' %>
<% end %>