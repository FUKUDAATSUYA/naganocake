
<h1>注文情報入力</h1>
<%= form_with(model: @order,url:orders_confirm_path , local: true ) do |f| %>

<h2>支払方法</h2>
	<%= f.radio_button :payment_method, :銀行振込 %>
	<%= f.label :payment_method, :銀行振込 %>
	<%= f.radio_button :payment_method, :クレジットカード%>
	<%= f.label :payment_method, :クレジットカード %>
<h2>お届け先</h2>
	<%= f.radio_button :address,[ current_customer.postcode , current_customer.address , current_customer.name ]%>
	<%= f.label :address, "ご自身の住所"%><br>
	<%= current_customer.addresses %><br>
	<%= f.radio_button :address, [:mail] %>
	<%= f.label :address, "登録済住所から選択" %><br>
	<%= f.select :mail_address, @mailingaddresses.all.map { |m| [m.postcode + m.address + m.name] },include_blank: true %><br>
	<%= f.radio_button :address, [:new] %>
	<%= f.label :address, "新しいお届け先" %><br>
		<%= f.label :郵便番号 %>
		<%= f.text_field :newpostcode %><br>
		<%= f.label :住所 %>
		<%= f.text_field :newaddress %><br>
		<%= f.label :宛名 %>
		<%= f.text_field :newname %>
	<%= hidden_field_tag :page, "new" %>
	<%= f.submit "確認画面へ進む", class: "btn btn-primary"%>
<% end %>
