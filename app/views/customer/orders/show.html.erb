<h1>注文履歴詳細</h1>
<h6>注文情報</h6>
<table class="table">
	<tr><th>注文日</th><td><%= @order.created_at.to_s(:date_jp) %></td></tr>
	<tr><th>配送先</th><td><%= @order.postcode %><br><%= @order.address %></td></tr>
	<tr><th>支払方法</th><td><%= @order.payment_method%></td></tr>
	<tr><th>ステータス</th><td><%= @order.order_status %></td></tr>
</table>
<h6>請求情報</h6>
<table class="table">
	<tr><th>商品合計</th><td><%= @order.payment - @order.postage %>円</td></tr>
	<tr><th>配送料</th><td><%= @order.postage %>円</td></tr>
	<tr><th>ご請求額</th><td><%= @order.payment %>円</td></tr>
</table>
<h6>注文内容</h6>
<table class="table">
	<th>商品</th>
	<th>単価（税込）</th>
	<th>個数</th>
	<th>小計</th>
		<% @order_items.each do |order_item| %>
		<tr>
			<td><%= order_item.item.name %></td>
			<td><%= (order_item.item.price * 1.1).floor %>円</td>
			<td><%= order_item.count %></td>
			<td><%= (order_item.item.price * 1.1).floor * order_item.count %>円</td>
		</tr>
		<% end %>
</table>
