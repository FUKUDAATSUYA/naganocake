<h3>新規会員登録</h3>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <table>
    <tr>
      <th>名前</th>
      <td>
      <span>(姓)</span>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </td>
      <td>
      <span>(名)</span>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td>
      <span>(セイ)</span>
        <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
      </td>
      <td>
      <span>(メイ)</span>
        <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
      </td>
    </tr>
    
    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </td>
    </tr>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td>
        <%= f.number_field :postcode, autofocus: true, autocomplete: "postcode" %>
      </td>
    </tr>
    <tr>
      <th>住所</th>
      <td>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td>
        <%= f.phone_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
      </td>
    </tr>
    <tr>
      <th>パスワード(6文字以上)</th>
      <td>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
    </tr>
    <tr>
      <th>パスワード確認用</th>
      <td>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </td>
    </tr>
  </table>
  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>
<p>
  <h3>既に登録済みの方</h3>
</p>
<%= link_to "こちら", new_customer_session_path %> からログインしてください。
