<% if admin_signed_in? %>
    <%= form_tag(search_path, method: :get) do %>
        <%= select_tag 'search[model]',options_for_select({ "会員(姓)" => "customer", "商品" => "item" }) %>
        <%= text_field_tag 'search[content]' %>
        <%= hidden_field_tag 'search[method]', "部分一致" => "partial" %>
        <%= submit_tag '検索', class: "btn btn-default" %>
    <% end %>
<% end %>
