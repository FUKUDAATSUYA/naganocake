<% if admin_signed_in? %>
    <%= form_tag(search_path, method: :get) do %>
        <%= select_tag 'search[model]', options_for_select({"会員 (姓)"=> "customer", "商品"=> "item"})%>
        <%= text_field_tag 'search[content]' %>
        <%= hidden_field_tag 'search[how]', "部分一致" => "partical" %>
            <%= submit_tag("検索", :id=>"button", :class=>"btn btn-default", :name=>"submit") %>
    <% end %>
<% end %>